<h1>Edit Customer</h1>
 
 <div class="row">

   <div class="col-md-8">
     <%= form_for @customer do |f| %>
      <div class="form-group">
         <%= f.label :title %>
         <%= f.text_field :title, class: 'form-control', placeholder: "Enter title" %>
       </div>
       <div class="form-group">
         <%= f.label :'First Name' %>
         <%= f.text_field :fname, class: 'form-control', placeholder: "Enter first name" %>
       </div>
        <div class="form-group">
         <%= f.label :'Middle Name' %>
         <%= f.text_field :mname, class: 'form-control', placeholder: "Enter middle name" %>
       </div>
        <div class="form-group">
         <%= f.label :'Last name' %>
         <%= f.text_field :lname, class: 'form-control', placeholder: "Enter last name" %>
       </div>
        <div class="form-group">
         <%= f.label :Suffix %>
         <%= f.text_field :suffix, class: 'form-control', placeholder: "Enter first name" %>
       </div>
       <div class="form-group">
         <%= f.submit "Save", class: 'btn btn-success' %>
       </div>
     <% end %>
   </div>
 </div>
